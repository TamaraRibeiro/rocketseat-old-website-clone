---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import { Image } from "astro:assets";

import logo from "../assets/logo.svg";
import face from "../assets/icons/face.svg";
import insta from "../assets/icons/insta.svg";
import twitter from "../assets/icons/twitter.svg";
import youtube from "../assets/icons/youtube.svg";
import About from "../components/About.astro";
import Community from "../components/Community.astro";
import Blog from "../components/Blog.astro";
import Newsletter from "../components/Newsletter.astro";
---

<Layout title="Rocketseat old website">
  <header class="bg-rocketseat">
    <div class="max-w-[64rem] mx-auto p-5">
      <nav class="flex items-center">
        <a href="#" class="flex items-center gap-7 mr-7">
          <Image src={logo} alt="" />
          <div class="w-px bg-white/50 h-6"></div>
        </a>

        <ul class="hidden md:flex items-center gap-4">
          <li class="font-bold uppercase text-white hover:border-b-2">
            <a href="">Início</a>
          </li>
          <li class="font-bold uppercase text-white hover:border-b-2">
            <a href="">Cursos</a>
          </li>
          <li class="font-bold uppercase text-white hover:border-b-2">
            <a href="">Treinamento</a>
          </li>
          <li class="font-bold uppercase text-white hover:border-b-2">
            <a href="">Blog</a>
          </li>
        </ul>

        <ul class="hidden md:flex items-center gap-4 ml-auto">
          <li class="w-5 h-5 flex items-center justify-center">
            <a href="#">
              <Image src={face} alt="" />
            </a>
          </li>
          <li>
            <a href="#"><Image src={insta} alt="" /></a>
          </li>
          <li>
            <a href="#"><Image src={twitter} alt="" /></a>
          </li>
          <li>
            <a href="#"><Image src={youtube} alt="" /></a>
          </li>
        </ul>
      </nav>
    </div>
  </header>
  <Hero/>
  <About/>
  <Community/>
  <Blog/>
  <Newsletter />
  <footer class="font-semibold text-sm text-stone-500 py-6 md:py-8 text-center">
    © 2018 - Rocketseat
  </footer>
</Layout>
